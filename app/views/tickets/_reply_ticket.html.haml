%h2= "View ticket: #{@ticket.reference}"
%div#columns
  %div#label= "Name:"
  %div= @ticket.name
%div#columns
  %div#label= "Email:"
  %div= @ticket.email
%div#columns
  %div#label= "Subject:"
  %div= @ticket.subject
%div#columns
  %div#label= "Body:"
  %div= @ticket.body
= form_for @event, url:{action:'reply'} do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :reply
    = f.text_field :reply
- @ticket.events.reverse.each do |e|
  %br
  %div#columns
    %div#label= "At:"
    %div= e.created_at
  %div#columns
    %div#label= "From:"
    %div= @event.from_client ? "Me" : "Support"
  %div#columns
    %div#label= "Reply:"
    %div= e.reply
